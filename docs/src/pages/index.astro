---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Pillar from "../components/Pillar.astro";
import SkillCard from "../components/SkillCard.astro";
import ReplayViewer from "../components/ReplayViewer.astro";
import { createHighlighter } from "shiki";
import { Circle, Plus, Diamond, Star, Waves } from "@lucide/astro";
import { getAllSkills, PILLARS } from "../utils/skills";

// Load replay data
import structure from "../data/1-structure.json";
import abstraction from "../data/2-abstraction.json";
import clarity from "../data/3-clarity.json";
import process from "../data/4-process.json";
import diagnostic from "../data/5-diagnostic.json";

// Pre-highlight code with Shiki at build time
const highlighter = await createHighlighter({
  themes: ["github-dark-dimmed"],
  langs: ["javascript", "python", "markdown"],
});

function langFromName(name: string): string {
  if (name.endsWith(".py")) return "python";
  if (name.endsWith(".md")) return "markdown";
  return "javascript";
}

function highlightCode(code: string, lang: string): string {
  if (!code) return "";
  const html = highlighter.codeToHtml(code, {
    lang,
    theme: "github-dark-dimmed",
  });
  // Strip the outer <pre><code>...</code></pre> wrapper — we have our own
  return html.replace(/^<pre[^>]*><code>/, "").replace(/<\/code><\/pre>$/, "");
}

const rawReplays = [structure, abstraction, clarity, process, diagnostic];
const replays = rawReplays.map((r) => {
  const lang = r.file ? langFromName(r.file.name) : "javascript";
  return {
    ...r,
    file: r.file
      ? {
          ...r.file,
          initialHtml: highlightCode(r.file.initial, lang),
          finalHtml: highlightCode(r.file.final || "", lang),
        }
      : undefined,
  };
});

const pillars = PILLARS;

const allSkills = getAllSkills();
---

<Layout title="Clairvoyance: Software Design Skills for AI Agents">
  <Hero
    skillsShCommand="npx skills add codybrom/clairvoyance"
    claudeStep1="/plugin marketplace add codybrom/clairvoyance"
    claudeStep2="/plugin install clairvoyance@clairvoyance-plugins"
  />

  <!-- ═══════ FIVE PILLARS ═══════ -->
  <section class="pillars">
    <h2 class="reveal">Extrasensory Perspective</h2>
    <p class="pillars-sub reveal">
      Your agent already knows how to code. Teach it how to
      <em>see</em>. Battle-tested philosophy on software design, grounded in
      decades of engineering experience.
    </p>

    <div class="pillar-row stagger">
      {
        pillars.map((p) => (
          <Pillar icon={p.icon} name={p.name} skills={p.skills} hue={p.hue} />
        ))
      }
    </div>
  </section>

  <!-- ═══════ SKILL CATALOG ═══════ -->
  <section class="catalog" id="catalog">
    <h2 class="reveal">Read the Tea Leaves</h2>
    <p class="catalog-sub reveal">
      Complexity hides all over your code. Each skill teaches your AI assistant
      exactly where to look.
    </p>
    <div class="catalog-grid stagger">
      {
        allSkills.map((s) => (
          <SkillCard
            slug={s.slug}
            title={s.title}
            description={s.description}
            pillarIcon={s.pillarIcon}
            pillarName={s.pillar}
            pillarHue={s.pillarHue}
          />
        ))
      }
    </div>
    <a href="/skills" class="catalog-mobile-link reveal">
      Browse all {allSkills.length} skills &rarr;
    </a>
  </section>

  <!-- ═══════ SESSION REPLAY ═══════ -->
  <section class="proof">
    <h2 class="reveal">See It in Action</h2>
    <p class="proof-intro reveal">
      Check out how Clairvoyance skills activate in real coding sessions. Your
      agent sees the design problem, applies the right principle and rewrites
      with intent.
    </p>

    <ReplayViewer replays={replays} defaultDemo="1-structure" />
  </section>

  <!-- ═══════ BOTTOM CTA ═══════ -->
  <section class="bottom">
    <div class="bottom-symbols">
      <Star size={18} />
      <Plus size={18} />
      <Circle size={18} />
      <Diamond size={18} />
      <Waves size={18} />
    </div>
    <h2 class="reveal">See through complexity</h2>
    <p class="bottom-text reveal">
      The principles behind Clairvoyance are inspired by the teachings of John
      Ousterhout and his book <a
        href="https://web.stanford.edu/~ouster/cgi-bin/aposd.php"
        ><em>A Philosophy of Software Design</em></a
      >. If you haven't read it, you really should.
    </p>
    <a href="https://github.com/codybrom/clairvoyance" class="cta-btn reveal">
      <Star size={16} />
      Star on GitHub
    </a>
  </section>

  <footer>
    <p>
      <a href="https://github.com/codybrom/clairvoyance">Clairvoyance</a> · <a
        href="https://github.com/codybrom/clairvoyance/blob/main/LICENSE"
        >MIT License</a
      > · © 2026
      <a href="https://github.com/codybrom">Cody Bromley</a>
    </p>
  </footer>
</Layout>

<style>
  /* ═══════ PROOF / REPLAY SECTION ═══════ */

  .proof {
    max-width: 1100px;
    margin: 0 auto;
    padding: clamp(4rem, 10vw, 10rem) clamp(1.5rem, 5vw, 3rem);
  }

  .proof h2 {
    font-family: var(--font-display);
    font-weight: 400;
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    line-height: 1.2;
    margin-bottom: 1rem;
    text-align: center;
  }

  .proof-intro {
    font-weight: 200;
    font-size: 1.05rem;
    color: var(--text-mid);
    line-height: 1.7;
    max-width: 620px;
    margin: 0 auto 3rem;
    text-align: center;
  }

  /* ═══════ PILLARS SECTION ═══════ */

  .pillars {
    max-width: 1100px;
    margin: 0 auto;
    padding: clamp(4rem, 10vw, 8rem) clamp(1.5rem, 5vw, 3rem);
    text-align: center;
  }

  .pillars h2 {
    font-family: var(--font-display);
    font-weight: 400;
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    margin-bottom: 1rem;
  }

  .pillars-sub {
    font-weight: 200;
    color: var(--text-mid);
    font-size: 1.05rem;
    max-width: 480px;
    margin: 0 auto 4rem;
    line-height: 1.65;
  }

  .pillar-row {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1.25rem;
    max-width: 720px;
    margin: 0 auto;
    justify-items: center;

    & :global(:nth-child(1)),
    & :global(:nth-child(2)),
    & :global(:nth-child(3)) {
      grid-column: span 2;
    }

    & :global(:nth-child(4)) {
      grid-column: 2 / span 2;
    }

    & :global(:nth-child(5)) {
      grid-column: 4 / span 2;
    }

    @media (width <= 640px) {
      max-width: none;
      grid-template-columns: repeat(2, 1fr);
      justify-items: stretch;

      & :global(:nth-child(1)),
      & :global(:nth-child(2)),
      & :global(:nth-child(3)),
      & :global(:nth-child(4)) {
        grid-column: span 1;
      }

      & :global(:nth-child(5)) {
        grid-column: 1 / -1;
        width: 100%;
        max-width: calc(50% - 0.625rem);
        margin: 0 auto;
        justify-self: auto;
      }
    }
  }

  /* ═══════ SKILL CATALOG ═══════ */

  .catalog {
    max-width: 1100px;
    margin: 0 auto;
    padding: clamp(2rem, 6vw, 4rem) clamp(1.5rem, 5vw, 3rem)
      clamp(4rem, 10vw, 8rem);
    text-align: center;
  }

  .catalog h2 {
    font-family: var(--font-display);
    font-weight: 400;
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    margin-bottom: 1rem;
  }

  .catalog-sub {
    font-weight: 200;
    color: var(--text-mid);
    font-size: 1.05rem;
    max-width: 520px;
    margin: 0 auto 3rem;
    line-height: 1.65;
  }

  .catalog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 1rem;
    text-align: left;
    max-width: 1100px;

    @media (width <= 640px) {
      display: none;
    }
  }

  .catalog-mobile-link {
    display: none;
    font-family: var(--font-body);
    font-weight: 400;
    font-size: 1rem;
    color: var(--gold);
    border-bottom: none;
    padding: 0.85rem 2rem;
    border: 1px solid oklch(0.75 0.12 75 / 0.25);
    border-radius: 8px;
    margin-top: 0.5rem;
    transition:
      background 0.2s,
      border-color 0.2s;

    &:hover {
      background: oklch(0.75 0.12 75 / 0.06);
      border-color: oklch(0.75 0.12 75 / 0.4);
    }

    @media (width <= 640px) {
      display: inline-block;
    }
  }

  /* ═══════ BOTTOM CTA ═══════ */

  .bottom {
    text-align: center;
    padding: clamp(3rem, 6vw, 5rem) 2rem clamp(3rem, 6vw, 5rem);
    position: relative;
    overflow: hidden;

    &::before {
      content: "";
      position: absolute;
      width: 600px;
      height: 300px;
      bottom: 40%;
      left: 50%;
      translate: -50% 0;
      background: radial-gradient(
        ellipse,
        oklch(0.75 0.12 75 / 0.04) 0%,
        transparent 70%
      );
      pointer-events: none;
    }
  }

  .bottom-symbols {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    color: var(--gold-dim);
    opacity: 0.3;
    margin-bottom: 2.5rem;
  }

  .bottom h2 {
    font-family: var(--font-display);
    font-weight: 400;
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-bottom: 1.2rem;
    line-height: 1.1;
  }

  .bottom-text {
    font-weight: 200;
    font-size: 1rem;
    color: var(--text-mid);
    max-width: 640px;
    margin: 0 auto 2.5rem;
    line-height: 1.65;
  }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--gold);
    color: var(--ink);
    font-family: var(--font-body);
    font-weight: 500;
    font-size: 1rem;
    padding: 0.85rem 2.5rem;
    border-radius: 8px;
    text-decoration: none;
    border: none;
    transition:
      background 0.3s,
      box-shadow 0.3s,
      translate 0.3s;

    &:hover {
      background: oklch(0.8 0.12 75);
      box-shadow: 0 0 40px oklch(0.75 0.12 75 / 0.2);
      translate: 0 -1px;
    }
  }

  /* ═══════ FOOTER ═══════ */

  footer {
    text-align: center;
    padding: 2.5rem 2rem;
    border-top: 1px solid oklch(1 0 0 / 0.03);

    & p {
      font-size: 0.75rem;
      color: var(--text-dim);
      font-weight: 300;
    }

    & a {
      color: var(--text-dim);
      border-bottom: none;

      &:hover {
        color: var(--gold-dim);
      }
    }
  }
</style>
