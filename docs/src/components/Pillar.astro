---
import { Circle, Plus, Diamond, Star, Waves } from "@lucide/astro";

interface Props {
  icon: string;
  name: string;
  skills: string[];
  hue: number;
}

const { icon, name, skills, hue } = Astro.props;

const iconMap = { Circle, Plus, Diamond, Star, Waves } as Record<string, any>;
const IconComponent = iconMap[icon];

/** "pull-complexity-down" â†’ "Pull Complexity Down" */
function formatSkill(slug: string): string {
  return slug
    .split("-")
    .map((w) => w.charAt(0).toUpperCase() + w.slice(1))
    .join(" ");
}
---

<div class="pillar reveal" style={`--pillar-hue: ${hue};`}>
  <span class="pillar-watermark" aria-hidden="true">
    {IconComponent && <IconComponent size={160} />}
  </span>
  <div class="pillar-content">
    <h3>{name}</h3>
    <ul class="skill-list">
      {skills.map((s) => <li>{formatSkill(s)}</li>)}
    </ul>
    <div class="pillar-count">
      {skills.length}
      {skills.length === 1 ? "skill" : "skills"}
    </div>
  </div>
</div>

<style>
  .pillar {
    padding: 2rem 1.5rem;
    border: 1px solid oklch(1 0 0 / 0.08);
    border-radius: var(--radius);
    background: var(--card);
    width: 100%;
    aspect-ratio: 3 / 4;

    @media (width <= 640px) {
      padding: 1.25rem 1rem;
      aspect-ratio: auto;
      min-height: 230px;
    }
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    transition:
      border-color 0.35s,
      translate 0.35s,
      box-shadow 0.35s;

    &:hover {
      border-color: oklch(0.7 0.1 var(--pillar-hue) / 0.4);
      translate: 0 -3px;
      box-shadow: 0 8px 40px oklch(0.5 0.08 var(--pillar-hue) / 0.15);
    }

    &:hover .pillar-watermark {
      opacity: 0.09;
    }
  }

  .pillar-watermark {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: oklch(0.7 0.1 var(--pillar-hue));
    opacity: 0.05;
    pointer-events: none;
    transition: opacity 0.4s;
  }

  .pillar-watermark :global(svg) {
    width: 160px;
    height: 160px;
  }

  .pillar-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
  }

  h3 {
    font-family: var(--font-display);
    font-weight: 400;
    font-size: 1.75rem;
    color: var(--text);
    letter-spacing: -0.01em;

    @media (width <= 480px) {
      font-size: 1.4rem;
    }
  }

  .pillar-count {
    font-family: var(--font-code);
    font-size: 0.8rem;
    color: oklch(0.78 0.08 var(--pillar-hue));
    margin-top: 0.25rem;
  }

  .skill-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .skill-list li {
    font-family: var(--font-body);
    font-size: 0.9rem;
    font-weight: 400;
    color: oklch(0.75 0.02 290);
    line-height: 1.4;

    @media (width <= 480px) {
      font-size: 0.78rem;
    }
  }
</style>
