---
import { Font } from "astro:assets";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  alternateMarkdown?: string;
  type?: string;
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
}

const defaultDescription =
  "ESP for AI Coding. Agent skills on the philosophy of software design, grounded in decades of engineering experience.";
const {
  title,
  description = defaultDescription,
  canonical,
  alternateMarkdown,
  type = "website",
  author,
  publishedTime,
  modifiedTime,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="apple-touch-icon-precomposed" href="/apple-touch-icon-precomposed.png" />
    <link
      rel="alternate"
      type="text/plain"
      href="/llms.txt"
      title="LLM-friendly summary"
    />

    {
      alternateMarkdown && (
        <link
          rel="alternate"
          type="text/markdown"
          href={alternateMarkdown}
          title="Raw skill (Markdown)"
        />
      )
    }
    {canonical && <link rel="canonical" href={canonical} />}
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://clairvoyance.fyi/og.png" />
    <meta property="og:type" content={type} />
    {canonical && <meta property="og:url" content={canonical} />}
    {author && <meta name="author" content={author} />}
    {
      publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }
    {
      modifiedTime && (
        <meta property="article:modified_time" content={modifiedTime} />
      )
    }
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://clairvoyance.fyi/og.png" />
    <Font cssVariable="--font-serif" preload />
    <Font cssVariable="--font-mono" preload />
    <Font cssVariable="--font-sans" preload />
  </head>
  <body>
    <a class="skip-link" href="#main-content">Skip to main content</a>
    <main id="main-content">
      <slot />
    </main>

    <script>
      const obs = new IntersectionObserver(
        (entries) => {
          for (const e of entries) {
            if (e.isIntersecting) e.target.classList.add("vis");
          }
        },
        { threshold: 0.15 },
      );
      document.querySelectorAll(".reveal").forEach((el) => obs.observe(el));
    </script>
  </body>
</html>
